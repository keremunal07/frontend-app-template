{
  "name": "nextjs-app-template",
  "version": "0.1.0",
  "author": "keremunal",
  "private": true,
  "scripts": {
    "dev": "next dev -p 3000",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "pre-commit": "npm run prettier && npm run build",
    "prepare": "husky install",
    "graphql:codegen": "npx get-graphql-schema http://localhost:3000/graphql > schema.graphql && gqlg --schemaFilePath schema.graphql --destDirPath ./src/graphql/ --depthLimit 5 && graphql-codegen --config codegen.yml"
  },
  "dependencies": {
    "@types/node": "18.11.9",
    "@types/react": "18.0.24",
    "@types/react-dom": "18.0.8",
    "graphql": "^16.6.0",
    "graphql-request": "^5.0.0",
    "next": "13.0.1",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-query": "^3.39.2",
    "sass": "^1.55.0",
    "typescript": "4.8.4"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^2.13.11",
    "@typescript-eslint/eslint-plugin": "^5.42.0",
    "@typescript-eslint/parser": "^5.42.0",
    "eslint": "^8.26.0",
    "eslint-config-next": "13.0.1",
    "eslint-config-prettier": "^8.5.0",
    "eslint-import-resolver-typescript": "^3.5.2",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3",
    "pre-commit": "^1.2.2",
    "prettier": "^2.7.1"
  },
  "lint-staged": {
    "*.{js,jsx, ts, tsx }": [
      "prettier --write",
      "eslint --no-error-on-unmatched-pattern --fix --ext .ts,.tsx,.js,.jsx"
    ]
  }
}
